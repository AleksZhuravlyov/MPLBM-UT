<?xml version="1.0" ?>

<geometry>
    <!-- The name of the .dat file that contains the entire geometry-->
    <file_geom> carbonate4Palabos_250_250_250 </file_geom>
    <!-- Size (in voxels) of the simulation domain. -->
    <size> <x> 250 </x> <y> 250 </y> <z> 250 </z> </size>
</geometry>

<folder>
    <!-- Output folder -->
    <out_f> tmp/ </out_f>
    <!-- Input folder -->
    <in_f> input/ </in_f>
</folder>

<simulations>
	<!-- Total number of geometries / individual simulations -->
	<num> 1 </num>
	<!-- Pressure-->
    <press> 0.0005 </press>
	<!-- Max iterations-->
    <iter> 150000 </iter>
	<!-- Convergence-->
    <conv> 0.01 </conv>
</simulations>
