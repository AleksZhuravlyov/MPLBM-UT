<?xml version="1.0" ?>

<geometry>
    <!-- The name of the .dat file that contains the representation of the geometry. -->
    <file_geom> tubes_284_54_106_new.dat </file_geom>
    <!-- Size (in voxels) of the simulation domain. -->
    <size> <x> 106 </x> <y> 54 </y> <z> 284 </z> </size>
    <!-- Periodicity -->
    <per>
          <fluid1> <x> false </x> <y> false </y> <z> false </z> </fluid1>
          <fluid2> <x> false </x> <y> false </y> <z> false </z> </fluid2>
    </per>
</geometry>

<init>
  <!-- Configuration of the initial fluid 1. -->
    <fluid1>
          <x1> 1 </x1> <y1> 1 </y1> <z1> 1 </z1>
          <x2> 2 </x2> <y2> 54 </y2> <z2> 284 </z2>
    </fluid1>
  <!-- Configuration of the initial fluid 2. -->
    <fluid2>
          <x1> 3 </x1> <y1> 1 </y1> <z1> 1 </z1>
          <x2> 106 </x2> <y2> 54 </y2> <z2> 284 </z2>
    </fluid2>
</init>


<fluids>
    <Gc> 0.9 </Gc>
    <omega1> 1 </omega1>
    <omega2> 1 </omega2>
    <force1> 0 </force1>
    <force2> 0 </force2>
    <G_ads_f1_s1> -0.4 </G_ads_f1_s1>
    <G_ads_f1_s2>  0.4 </G_ads_f1_s2>
	<!-- Density of fluid 1 in Geometry initially-->
    <rho1> 2 </rho1>
    <!-- Density of fluid 2 in Geometry initially-->
    <rho2> 2 </rho2>
    <!-- Density change of fluid 2 at outlet per step -->
    <num_pc> 0.05 </num_pc>
    <!-- Density of fluid 1 at the inlet (Constant)-->
    <rho1_i> 2 </rho1_i>
    <!-- Initial Density of fluid 2 at the outlet -->
    <rho2_i> 2 </rho2_i>
    <!-- Final density of fluid 2 at the outlet -->
    <rho2_f> 1.5 </rho2_f>
    <!-- Dissolved density of one phase in the other-->
    <rho_d> 0.06 </rho_d>
</fluids>


<output>
    <!-- Output folder -->
    <out_f> tube_test/ </out_f>
	<!-- Convergence -->
    <conv> 0.00001 </conv>
    <!-- Max iterations per Pc -->
    <it_max> 50 </it_max>
    <!-- Check for convergence -->
    <it_con> 500 </it_con>
    <!-- Print info to the terminal -->
    <it_info> 200 </it_info>
    <!-- Print gifs -->
    <it_gif> 200 </it_gif>
    <!-- print vtks -->
    <it_vtk> 1000 </it_vtk>
    <!-- print geometry (yes=1) -->
    <op_geom> 1 </op_geom>
    <!-- print stl (yes=1) -->
    <op_stl> 1 </op_stl>


</output>
