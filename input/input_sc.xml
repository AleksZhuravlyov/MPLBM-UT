<?xml version="1.0" ?>

<geometry>
    <!-- The name of the .dat file that contains the representation of the geometry. -->
    <file_geom> tmp/finney_DRP_500_x.dat </file_geom>
    <!-- Size (in voxels) of the simulation domain. -->
    <size> <x> 100 </x> <y> 200 </y> <z> 300 </z> </size>
    <!-- Periodicity -->
    <per>
          <fluid1> <x> true </x> <y> true </y> <z> true </z> </fluid1>
          <fluid2> <x> true </x> <y> true </y> <z> true </z> </fluid2>
    </per>
</geometry>

<init>
  <!-- Configuration of the initial fluid 1. -->
    <fluid1>
          <x1> 2 </x1> <y1> 2 </y1> <z1> 2 </z1>
          <x2> 3 </x2> <y2> 3 </y2> <z2> 3 </z2>
    </fluid1>
  <!-- Configuration of the initial fluid 2. -->
    <fluid2>
          <x1> 2 </x1> <y1> 2 </y1> <z1> 2 </z1>
          <x2> 3 </x2> <y2> 3 </y2> <z2> 3 </z2>
    </fluid2>
</init>


<fluids>
    <omega1> 1 </omega1>
    <omega2> 1 </omega2>
    <force1> 0 </force1>
    <force2> 0 </force2>
    <G_ads_f1_s1> 0.5 </G_ads_f1_s1>
    <G_ads_f1_s2> -0.5 </G_ads_f1_s2>
    <!-- Number of capillary pressure steps -->
    <num_pc> 10 </num_pc>
    <!-- Initial density of fluid 1 at the inlet -->
    <rho1_i> 2 </rho1_i>
    <!-- Initial density of fluid 2 at the inlet -->
    <rho2_i> 2 </rho2_i>
    <!-- Final density of fluid 1 at the inlet -->
    <rho1_f> 3 </rho1_f>
    <!-- Final density of fluid 2 at the inlet -->
    <rho2_f> 3 </rho2_f>
    <!-- Initial density (accross the domain) of fluid 1 -->
    <rho1> 2 </rho1>
    <!-- Initial density (accross the domain) of fluid 2 -->
    <rho2> 2 </rho2>
    <!-- Dissolved density of one phase in the other-->
    <rho_d> 0.06 </rho_d>
</fluids>


<output>
    <!-- Output folder -->
    <out_f> /tmp </out_f>
    <!-- Max iterations per Pc -->
    <it_max> 10000 </it_max>
    <!-- Check for convergence -->
    <it_con> 100 </it_con>
    <!-- Print info to the terminal -->
    <it_info> 500 </it_info>
    <!-- Print gifs -->
    <it_gif> 500 </it_gif>
    <!-- print vtks -->
    <it_vtk> 1000 </it_vtk>
</output>
